<h2>All Heroines</h2>
<% if @error.present? %>
 <ul>
     <li style="color: red;"><%= @error %></li>
 </ul>
<% end %>
<%= form_tag(heroines_path, method: "get") do %>
  <%= label_tag(:q, "Search by Super Power:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<h4><%= link_to 'Add New Heroine', new_heroine_path %> </h4>
<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
